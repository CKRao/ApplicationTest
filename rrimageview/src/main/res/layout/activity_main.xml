<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cr="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.clark.rrimageview.MainActivity">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.clark.rrimageview.RRImageview
                android:id="@+id/gado"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:src="@drawable/g5"
                android:layout_margin="10dp"
                cr:type="circle"
                />
           <LinearLayout
               android:layout_weight="4"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <Button
                   android:layout_weight="1"
                   android:id="@+id/bt1"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="pic1"/>
               <Button
                   android:layout_weight="1"
                   android:id="@+id/bt2"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="pic2"/>
               <Button
                   android:layout_weight="1"
                   android:id="@+id/bt3"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="pic3"/>
               <Button
                   android:layout_weight="1"
                   android:id="@+id/bt4"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="pic4"/>
           </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_weight="1"
                    android:id="@+id/bt5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="round"/>
                <Button
                    android:layout_weight="1"
                    android:id="@+id/bt6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="circle"/>
                <Button
                    android:layout_weight="1"
                    android:id="@+id/bt7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="setRadius"/>
            </LinearLayout>
        </LinearLayout>
</RelativeLayout>
